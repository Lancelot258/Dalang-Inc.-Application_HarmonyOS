<?xml version="1.0" encoding="utf-8"?>
<StackLayout xmlns:ohos="http://schemas.huawei.com/res/ohos"
                   ohos:height="match_content"
                   ohos:width="match_content"
                   ohos:alignment="center"
                   ohos:top_margin="0vp"
                   ohos:bottom_margin="0vp"
                   ohos:layout_direction="locale"
                   ohos:orientation="vertical">
    <Image
        ohos:id="$+id:grid_item_image"
        ohos:height="match_content"
        ohos:width="match_content"
        ohos:layout_alignment="center"
        ohos:scale_mode="stretch" />

    <Image
        ohos:id="$+id:grid_item_delete"
        ohos:height="24vp"
        ohos:width="24vp"
        ohos:layout_alignment="top|right"
        ohos:image_src="$media:delete"
        ohos:scale_mode="stretch"
        />
    <!--        ohos:auto_font_size="true"-->
</StackLayout>